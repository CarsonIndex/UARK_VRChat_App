<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@color/background"
    tools:context=".ChatActivity">

    <Button
        android:id="@+id/buttonSend2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/square"
        android:onClick="attemptIndex"
        android:text="Send Index"
        android:textColor="@color/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IndexLayout"
        app:rippleColor="@color/icon" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/square"
        android:onClick="attemptYoutube"
        android:text="Send Link"
        android:textColor="@color/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/IPLayout"
        app:rippleColor="@color/icon" />

    <Button
        android:id="@+id/buttonChatSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/square"
        android:onClick="returnChat"
        android:text="Save"
        android:textColor="@color/icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/icon"
        tools:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:id="@+id/IPLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.329">

        <TextView
            android:id="@+id/targetChatText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Youtube Link:"
            android:textAlignment="center"
            android:textColor="@color/icon" />

        <EditText
            android:id="@+id/chatText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints="none"
            android:background="@color/border"
            android:backgroundTint="@color/square"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Insert Link"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColor="@color/icon"
            android:textColorHint="@color/hint" />
    </LinearLayout>

    <TextView
        android:id="@+id/chatView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/chat_section"
        android:textAlignment="center"
        android:textColor="@color/icon"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/IPLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/IndexLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSend">

        <TextView
            android:id="@+id/targetIndexText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Index:"
            android:textAlignment="center"
            android:textColor="@color/icon" />

        <EditText
            android:id="@+id/indexText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints="none"
            android:background="@color/border"
            android:backgroundTint="@color/square"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Index of Video"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="@color/icon"
            android:textColorHint="@color/hint" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>